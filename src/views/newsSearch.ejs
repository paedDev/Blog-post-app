<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Node.Js news</title>
    <link rel="stylesheet" href="/style/main.css">
</head>
<body>
    <header class="header">
        <div class="header-logo">Node.Js News</div>
        <div class="header-search">

            <form action="/" method="POST">
                <input type="text" name="search" placeholder="Search for news" required id="input">
                <input type="submit" value="search">
            </form>
        </div>

    </header>
    <div class="container">
        <div class="content">
            <% if (articles != null) {%>
            <% articles.forEach((article) => {  %>
            <a href="/article/<%-article.id %>" class="news-card">
                <img src="<%-article.thumbnail_url %>" alt="image">
                <h2><%-article.title.rendered  %> </h2>
                <p><%- article.excerpt.rendered %></p>
                <% }) %>

            <% } else {%>
                No post found
            <%}    %>

            </a>
        </div>
    </div>
</body>
</html>